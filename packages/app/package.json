{
  "name": "srt-editor-app",
  "scripts": {
    "start": "electron lib/main/index.mjs",
    "build": "pnpm build:main && pnpm build:browser && pnpm copy:css",
    "build:main": "rimraf lib/main && tsup",
    "build:browser": "vite build",
    "build:dependency": "cd ../editor && pnpm build",
    "build:dev": "pnpm build:dependency && pnpm build:browser && pnpm copy:css",
    "copy:css": "cp ../editor/lib/style.css ./lib/browser/editor.css"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "electron": "^32.0.1",
    "srt-editor": "workspace:*"
  }
}